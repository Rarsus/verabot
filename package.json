{
  "name": "verabot",
  "version": "1.0.0",
  "main": "src/index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node src/index.js",
    "test": "jest --config .config/jest.config.js",
    "test:watch": "jest --config .config/jest.config.js --watch",
    "test:coverage": "jest --config .config/jest.config.js --coverage",
    "test:unit": "jest --config .config/jest.config.js tests/unit",
    "test:integration": "jest --config .config/jest.config.js tests/integration",
    "lint": "eslint --config .config/eslint.config.js .",
    "lint:fix": "eslint --config .config/eslint.config.js . --fix",
    "format": "prettier --config .config/.prettierrc --ignore-path .config/.prettierignore --write .",
    "format:check": "prettier --config .config/.prettierrc --ignore-path .config/.prettierignore --check .",
    "docs:sync-versions": "node scripts/docs/sync-versions.js",
    "docs:collect-metrics": "node scripts/docs/collect-metrics.js",
    "docs:validate": "node scripts/docs/validate-docs.js",
    "docs:generate-changelog": "node scripts/docs/generate-changelog.js",
    "docs:generate-api": "node scripts/docs/generate-api-reference.js",
    "docs:check-drift": "node scripts/docs/check-doc-drift.js",
    "docs:check": "npm run docs:validate && npm run docs:sync-versions && npm run docs:check-drift",
    "docs:generate": "npm run docs:generate-changelog && npm run docs:generate-api",
    "docs:generate-diagrams": "node scripts/docs/generate-architecture-diagrams.js",
    "docs:track-performance": "node scripts/docs/track-performance-baseline.js",
    "docs:tier3-all": "npm run docs:generate-diagrams && npm run docs:track-performance",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.js": [
      "eslint --config .config/eslint.config.js --fix",
      "eslint --config .config/eslint.config.js"
    ]
  },
  "dependencies": {
    "@bull-board/api": "^6.0.0",
    "@bull-board/express": "^6.0.0",
    "better-sqlite3": "^12.0.0",
    "bullmq": "^5.9.0",
    "discord.js": "^14.16.0",
    "dotenv": "^17.0.0",
    "express": "^5.0.0",
    "ioredis": "^5.4.1",
    "pino": "^10.0.0",
    "pino-pretty": "^13.0.0",
    "prom-client": "^15.0.0",
    "ws": "^8.18.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "eslint-plugin-jest": "^29.5.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "jest-mock-extended": "^4.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4"
  }
}
